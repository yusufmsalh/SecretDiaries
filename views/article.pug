extends Sharedlayout

block content
  h1= article.title
  h5 Written by  #{author}
  p= article.body
  hr
  if user
   if user.id == article.author
    a.btn.btn-default(href='/articles/edit/'+article._id) Edit
    a.btn.btn-danger.delete-article-class(href='#',data-id=article._id) Delete
  //use the line above to delete an Article ,using a class called delete-article
